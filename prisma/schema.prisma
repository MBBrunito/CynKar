generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id         String  @id @default(uuid())
  nombre     String
  precio     Float
  imagen     String
  categoria  String
  stock      Int     @default(10) // ðŸ”¹ AÃ±adimos el campo de stock con valor por defecto
  createdAt  DateTime @default(now())
}
